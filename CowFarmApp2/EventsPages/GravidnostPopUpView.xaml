        <StackLayout Margin="12" Padding="24" Spacing="24" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="AUTO"/>
                    <ColumnDefinition Width="AUTO"/>
                </Grid.ColumnDefinitions>
                
            <!--<Label Text="Datum začeća" Grid.Row="0" Grid.Column="0"/>
            <DatePicker x:Name="DatumZaćećaEntry" Grid.Row="0" Grid.Column="1"/>-->
                
            <Label Text="Dana gravidnosti" Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="DanaGravidnostiEntry" Text="0" Grid.Row="0" Grid.Column="1" Keyboard="Numeric"/>

            <Label Text="Datum pregleda" Grid.Row="1" Grid.Column="0"/>
            <DatePicker x:Name="DatumPregledaEntry" Grid.Row="1" Grid.Column="1"/>

                <!--<Label Text="Datum teljenja" Grid.Row="1" Grid.Column="0"/>
            <DatePicker x:Name="DatumTeljenjaEntry" Grid.Row="1" Grid.Column="1"/>

            <Label Text="Dana gravidnosti" Grid.Row="2" Grid.Column="0"/>
            <Entry x:Name="DanaGravidnostiEntry" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="Center"/>-->

            <Button  Text="Ok" Clicked="OK_Button_Clicked" Grid.Row="2" Grid.ColumnSpan="2"/>
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
